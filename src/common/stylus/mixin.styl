// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

border-top-1px($color)
  position: absolute
  content: ' '
  top: 0
  left: 0
  width: 100%
  height: 1px
  background: $color
  transform: scaleY(0.5)
  transform-origin: 0 0

border-bottom-1px($color)
  position: absolute
  content: ' '
  bottom: 0
  right: 0
  width: 100%
  height: 1px
  background: $color
  transform: scaleY(0.5)
  transform-origin: 0 0
