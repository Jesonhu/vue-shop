// 颜色定义规范
$color-background = #f9f9f9
$color-background-d = rgba(249,249,249, 0.3)
$color-background-l = rgba(249,249,249, 0.5)
$color-background-ll = rgba(249,249,249, 0.8)
$color-highlight-background = #333
$color-dialog-background = #666
$color-theme = rgb(255, 60, 60)
$color-theme-d = rgba(255, 60, 60, 0.9)
$color-sub-theme = #d93f30
$color-text = #fff
$color-text-d = rgba(255, 255, 255, 0.3)
$color-text-l = rgba(255, 255, 255, 0.5)
$color-text-ll = rgba(255, 255, 255, 0.8)

//字体定义规范
$font-size-small-s = .2rem    // 10px
$font-size-small = .24rem     // 12px
$font-size-medium = .28rem    // 14px
$font-size-medium-x = .32rem  // 16px
$font-size-large = .36rem     // 18px
$font-size-large-d = .44rem   // 22px
$font-size-large-x = .48rem   // 24px

// 常用颜色
$color-unit = #6e6e6e
$color-price = #fb5627

// zIndex定义规范
$zIndex-s = 100
$zIndex-d = 200
$zIndex-x = 300
